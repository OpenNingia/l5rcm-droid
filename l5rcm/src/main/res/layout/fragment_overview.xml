<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/org.openningia.l5rcm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.openningia.l5rcm.fragments.OverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

    <ImageButton
        android:src="@drawable/ic_launcher"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:maxHeight="160dp"
        android:contentDescription="@string/character_img_alt"
        android:onClick="onCharacterImgClick"
        android:id="@+id/character_image"
        />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="5"
            android:useDefaultMargins="true"
            android:layout_margin="@dimen/default_gap"
            >

            <TextView
                android:text="Name"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="right"
                android:textSize="24dp"
                />

            <TextView
                android:text="Clan"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_gravity="right"
                android:textSize="24dp"
                />


            <TextView
                android:text="Family"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_gravity="right"
                android:textSize="24dp"
                />

            <TextView
                android:text="School"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_gravity="right"
                android:textSize="24dp"
                />

            <!-- SPACERS -->
            <Space android:layout_row="0" android:layout_column="1" android:layout_width="20dp"/>
            <!-- VALUES -->

            <EditText
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="24dp"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                />

            <TextView
                android:text="Crab"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="24dp"
                />

            <TextView
                android:text="Hida"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="24dp"
                />

            <TextView
                android:text="Hida Bushi School"
                android:layout_column="2"
                android:layout_row="3"
                android:textSize="24dp"
                />

        </GridLayout>
    </LinearLayout>

</FrameLayout>
